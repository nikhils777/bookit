<%= form_for Availability.new do |f| %>
<div align="center">
  <h2>Let clients know when you are available!</h2>
  <%= f.label :date %>
  <%= f.text_field :date, class: 'form-control', placeholder: "Month/Day/Year" %>
  <%= f.label :start %>
  <%= f.text_field :start, class: 'form-control', placeholder: "Enter a start time (ex. 7am)" %>
  <%= f.label :end %>
  <%= f.text_field :end, class: 'form-control', placeholder: "Enter a finish time ( ex. 8pm)" %>
  <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>